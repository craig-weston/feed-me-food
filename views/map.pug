extends layout

block content

	main.container-fluid


		#search
			#locationField
				input#autocomplete-input(placeholder='Search by city', type='text')
				input#autocompleteRestaurant-input(placeholder='Search by Restaurant', type='text')
		.map-and-list
			.map-wrapper
				#map
					each restaurant in restaurants
						a#iw-reviews(href=`/map/${restaurant.place_id}`) #{restaurant.name}
					#loading.loading

			.info-wrapper
				#sort-options.sort
					label(for='sort') Sort By
					select#sort(name='sort')
						option(value='allStars') all Stars
						option(value='sortAsc') Highest Rating
						option(value='sortDesc') Lowest Rating
						option(value='sort3Star') 1-3 stars
						option(value='sort4Star') 4 star
						option(value='sort5Star') 5 star
				#listing
					#results
					button#more More results
			#info-content
				#iw-icon
				h3#iw-rating
				.extra-details
					#iw-url
					#iw-address
					#iw-phone
					#iw-website
					#iw-open
					a#iw-reviews(href=`/restaurant/${restaurant}`)
			#info-content-small
				#iw-icon-small
				h3#iw-rating-small
				.extra-details
					#iw-url-small
			#info-content-new-restaurant
				form#form-add-restaurant(action='post')
		#restaurant-info
			.container
				#street-view
					#street-view-wrapper
						#pano
					#photo
				.restaurant
					.button-menu
						button#back-to-map-button.main-button
							a(href='#header') Back to Map
						button#see-photo.main-button See Photo
						button#see-street-view.main-button See Street View
						button#add-review-button.main-button
							a(href=`/addReview/${restaurant}`) Add a Review
					h2#name.restaurant-name
					p#address.restaurant-details
					p#telephone.restaurant-details
					p#website.restaurant-details
					.review-header
						h3.title Reviews #{place}
					#reviews
					#show-message
					#form-wrapper
						form#add-review(method='post')
							label(for='name') Please add Your Name
							input#your-name(type='text', name='name', placeholder='Your Name', required='')
							input#restaruant-id(type='text', name='id', required='' value=restaurant)
							label(for='rating') What Rating do you give this Restaurant
							select#your-rating(name='rating', required='')
								option(value='1') 1
								option(value='2') 2
								option(value='3') 3
								option(value='4') 4
								option(value='5') 5
							label(for='your-review') What would you like to say about this restaurant
							textarea#your-review(name='review', placeholder='Your Review', required='')
							button#add-to-array.button(type='submit') Add Review

