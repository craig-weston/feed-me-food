extends layout

block content
  header#header
    .logo
      img(src='../images/logo.png')
    h1 Restaurant Reviews
  main
    #search
      #locationField
        input#autocomplete-input(placeholder='Search by city', type='text')
        input#autocompleteRestaurant-input(placeholder='Search by Restaurant', type='text')
    .map-and-list
      .map-wrapper
        #map
          #loading.loading
            p
              | The map is loading. We are trying to find your location. Please be patient.
              | It will be worth it. :)
            p You will be able to view nearby restaurants
            p Search for restaurants
            p Add Restaurants by right clicking on the map
      .info-wrapper
        #sort-options.sort
          label(for='sort') Sort By
          select#sort(name='sort')
            option(value='allStars') all Stars
            option(value='sortAsc') Highest Rating
            option(value='sortDesc') Lowest Rating
            option(value='sort3Star') 1-3 stars
            option(value='sort4Star') 4 star
            option(value='sort5Star') 5 star
        #listing
          #results
          button#more More results
      #info-content
        #iw-icon
        h3#iw-rating
        .extra-details
          #iw-url
          #iw-address
          #iw-phone
          #iw-website
          #iw-open
          a#iw-reviews(href='#restaurant-info')
      #info-content-small
        #iw-icon-small
        h3#iw-rating-small
        .extra-details
          #iw-url-small
      #info-content-new-restaurant
        form#form-add-restaurant(action='post')
    #restaurant-info
      .container
        #street-view
          #street-view-wrapper
            #pano
          #photo
        .restaurant
          .button-menu
            button#back-to-map-button.main-button
              a(href='#header') Back to Map
            button#see-photo.main-button See Photo
            button#see-street-view.main-button See Street View
            button#add-review-button.main-button
              a(href='#add-review') Add a Review
          h2#name.restaurant-name
          p#address.restaurant-details
          p#telephone.restaurant-details
          p#website.restaurant-details
          .review-header
            h3.title Reviews
          #reviews
          #show-message
          #form-wrapper
            form#add-review
              label(for='your-name') Please add Your Name
              input#your-name(type='text', name='your-name', placeholder='Your Name', required='')
              label(for='your-rating') What Rating do you give this Restaurant
              select#your-rating(name='your-rating', required='')
                option(value='1') 1
                option(value='2') 2
                option(value='3') 3
                option(value='4') 4
                option(value='5') 5
              label(for='your-review') What would you like to say about this restaurant
              textarea#your-review(name='your-review', placeholder='Your Review', required='')
              button#add-to-array.button(type='submit') Add Review
  script(src='../javascripts/map.js')
  script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCVXZ0vhPliqPIvwSUaSvZJ9XmcoJKtXaM&libraries=places&callback=initMap', async='', defer='')
  script(src='https://maps.googleapis.com/maps/api/streetview?size=400x400&location=40.720032,-73.988354\
      &fov=90&heading=235&pitch=10\
      &key=AIzaSyCVXZ0vhPliqPIvwSUaSvZJ9XmcoJKtXaM')
